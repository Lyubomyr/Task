<dl class="dl-horizontal">
  <dt><strong><%= t('.human_count') %></strong></dt>
  <dd><%= @picture_order.human_count %></dd>x
  <dt><strong><%= t('.size') %></strong></dt>
  <dd><%= @picture_order.size %></dd>
  <dt><strong><%= t('.frame') %></strong></dt>
  <dd><%= @picture_order.frame %></dd>
  <dt><strong><%= t('.gel') %></strong></dt>
  <dd><%= @picture_order.gel %></dd>
  <dt><strong><%= t('.picture') %></strong></dt>
  <dd><%= image_tag @picture.image_mini %></dd>

  <dt><strong><%= t('.photo') %></strong></dt>
   <% @images.each do |img| %>
  <%= image_tag img.image_url, size: '200x200' %>
  <% end %>
  <dd><%= @picture_order.comments %></dd>

  <dt><strong><%= t('.user_name') %></strong></dt>
  <dd><%= @picture_order.user_name %></dd>
  <dt><strong><%= t('.user_mname') %></strong></dt>
  <dd><%= @picture_order.user_mname %></dd>
  <dt><strong><%= t('.user_surname') %></strong></dt>
  <dd><%= @picture_order.user_surname %></dd>
  <dt><strong><%= t('.user_email') %>:</strong></dt>
  <dd><%= @picture_order.user_email %></dd>
  <dt><strong><%= t('.user_address') %>:</strong></dt>
  <dd><%= @picture_order.user_address %></dd>
  <dt><strong><%= t('.user_tel') %>:</strong></dt>
  <dd><%= @picture_order.user_tel %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_picture_order_path(@picture_order), :class => 'btn' %>
</div>
