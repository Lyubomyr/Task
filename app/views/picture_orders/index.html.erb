<%- model_class = PictureOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:picture_id) %></th>
      <th><%= model_class.human_attribute_name(:size) %></th>
      <th><%= model_class.human_attribute_name(:human_count) %></th>
      <th><%= model_class.human_attribute_name(:gel) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @picture_orders.each do |picture_order| %>
      <tr>
        <td><%= link_to picture_order.id, picture_order_path(picture_order) %></td>
        <td><%= picture_order.user_id %></td>
        <td><%= picture_order.picture_id %></td>
        <td><%= picture_order.size %></td>
        <td><%= picture_order.human_count %></td>
        <td><%= picture_order.gel %></td>
        <td><%= picture_order.image %></td>
        <td><%= picture_order.comments %></td>
        <td><%=l picture_order.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_picture_order_path(picture_order),
				:class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      picture_order_path(picture_order),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_picture_order_path,
            :class => 'btn btn-primary' %>
