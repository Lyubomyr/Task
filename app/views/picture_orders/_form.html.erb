<%= form_for @picture_order, :html => { :class => 'form-horizontal',
				:multipart => true } do |f| %>
  <p class="text-error">
  	<%= render 'shared/error_messages', :object => f.object %>
  </p>

  <div class="control-group">
    <%= f.label :size, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :size, options_for_select([['70x50'], ['80x60']], selected: '70x50') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :human_count, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :human_count, value: 1, in: 1..6, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gel, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :gel, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comments, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :comments, :class => 'text_field', size: '5x5' %>
    </div>
  </div>
  <%= f.fields_for :user, :html => { :class => 'form-horizontal'} do |builder| %>
  	<%= render 'user', f: builder %>
  <% end %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
